{
    "name": "php-bcrypt-converter",
    "version": "1.1.5",
    "description": "Convert PHP bcrypt hashes to JavaScript bcrypt format",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "prepare": "npm run build",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepublishOnly": "npm test && npm run build"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/src/**/*.test.ts"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/"
        ]
    },
    "keywords": [
        "bcrypt",
        "php",
        "javascript",
        "hash",
        "conversion"
    ],
    "author": "Ahmed Khidr (https://github.com/dippys)",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dippys/php-bcrypt-converter.git"
    },
    "bugs": {
        "url": "https://github.com/Dippys/php-bcrypt-converter/issues"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.0.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.2"
    },
    "homepage": "https://github.com/dippys/php-bcrypt-converter#readme"
}
